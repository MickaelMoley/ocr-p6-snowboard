{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 ">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Définir un nouveau mot de passe
                </h2>
            </div>

            {% for message in app.flashes('success') %}
                <div class="p-4 bg-green-100 text-green-700 rounded">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="p-4 bg-red-100 text-red-700 rounded">
                    {{ message }}
                    <hr>

                </div>
            {% endfor %}
            {{ form_errors(form) }}

            {# Si le form est injecté dans la vue alors on l'affiche #}
            {% if form is defined %}
                {{ form_start(form, {'attr': {"class": "mt-8 space-y-6 border-2 border-gray-200 p-6 rounded"}}) }}
                <div class="rounded-md shadow-sm mb-8">
                    <div class="mb-6">
                        {{ form_label(form.password,"Mot de passe", {"attr": {"class":"font-semibold text-gray-600"}}) }}
                        <div class="text-red-600 text-sm">
                            {{ form_errors(form.password, {"attr": {"class":"text-red-600"}}) }}
                        </div>
                        {{ form_widget(form.password, {"attr": {"class": "appearance-none rounded-none relative block w-full mt-1 px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm hover:border-gray-400"}}) }}
                        <div class="text-gray-600 text-sm mt-1">
                            {{ form_help(form.password) }}
                        </div>
                    </div>
                    <div class="mb-6">
                        {{ form_label(form.confirm_password,"Confirmation du mot de passe", {"attr": {"class":"font-semibold text-gray-600"}}) }}
                        <div class="text-red-600 text-sm">
                            {{ form_errors(form.confirm_password, {"attr": {"class":"text-red-600"}}) }}
                        </div>
                        {{ form_widget(form.confirm_password, {"attr": {"class": "appearance-none rounded-none relative block w-full mt-1 px-3 py-2 border-2 border-gray-300 placeholder-gray-500 text-gray-900 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm hover:border-gray-400"}}) }}
                        <div class="text-gray-600 text-sm mt-1">
                            {{ form_help(form.confirm_password) }}
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Valider ma demande
                    </button>
                </div>
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
